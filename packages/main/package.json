{
  "name": "electron-app",
  "productName": "Electron App",
  "version": "0.1.0",
  "private": true,
  "main": "out/src/main.js",
  "homepage": "./",
  "description": "An Electron app with Next.js and Tailwind CSS",
  "author": "test",
  "scripts": {
    "dev": "tsc && (concurrently -k \"tsc-alias -w -p tsconfig.json\"  \"electron .\")",
    "build": " npm run build:main",
    "start": "cross-env NODE_ENV=production electron .",
    "build:tailwindMain": "npx tailwindcss build --config tailwind.config.js -o ./src/tailwind.css",
    "build:main": "tsc && tsc-alias -p tsconfig.json",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "builder": "electron-builder --dir"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "electron-reload": "2.0.0-alpha.1",
    "electron-serve": "^1.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "eslint": "^8.57.0",
    "install": "^0.13.0",
    "npm": "^10.5.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "tsc-alias": "^1.8.8",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.3"
  },
  "build": {
    "appId": "Electron-app",
    "productName": "Electron App",
    "directories": {
      "output": "../../dist"
    },
    "files": [
      "../renderer/out/**/*",
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Electron App",
      "license": "license.md"
    },
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "title": "Mac Installer"
    }
  }
}
